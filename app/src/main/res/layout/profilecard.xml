<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/profile_poster_movie"
        android:layout_width="190dp"
        android:layout_height="280dp"
        android:layout_marginStart="108dp"
        android:src="@drawable/poster_placeholder"
        app:layout_constraintBottom_toBottomOf="@id/marathon_movie"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.32" />

    <Button
        android:id="@+id/marathon_movie"
        android:layout_width="190dp"
        android:layout_height="47dp"
        android:layout_marginBottom="20dp"
        android:text="Remove"
        app:backgroundTint="@color/purple_600"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/profile_poster_movie"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/profile_poster_movie"
        app:layout_constraintTop_toBottomOf="@+id/profile_poster_movie"
        app:layout_constraintVertical_bias="1.0"
        app:textAllCaps="true" />

</androidx.constraintlayout.widget.ConstraintLayout>